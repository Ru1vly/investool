# ============================================================================
# FinRisk AI Production Environment Configuration
#
# Copy this file to .env.production and fill in your production values:
#   cp .env.production.example .env.production
#
# CRITICAL SECURITY NOTES:
# - Use strong, unique passwords for all services
# - Never commit .env.production to git!
# - Rotate secrets regularly
# - Use secret management systems (AWS Secrets Manager, HashiCorp Vault, etc.)
# ============================================================================

# ============================================================================
# Gemini AI Configuration (REQUIRED)
# ============================================================================

GEMINI_API_KEY=your_production_gemini_api_key_here
GEMINI_PRO_MODEL=gemini-1.5-pro-latest
GEMINI_FLASH_MODEL=gemini-1.5-flash-latest

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================

POSTGRES_DB=finrisk_production_db
POSTGRES_USER=finrisk_prod_user
# CRITICAL: Use a strong password (min 32 chars, mixed alphanumeric + special chars)
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_MIN_32_CHARS

# ============================================================================
# Redis Configuration
# ============================================================================

# CRITICAL: Set a strong password for production
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_REDIS_PASSWORD

# ============================================================================
# Neo4j Configuration
# ============================================================================

NEO4J_USER=neo4j
# CRITICAL: Use a strong password
NEO4J_PASSWORD=CHANGE_ME_TO_STRONG_NEO4J_PASSWORD

# ============================================================================
# Application Configuration
# ============================================================================

# NEVER set DEBUG=true in production!
DEBUG=false

# Production logging level
LOG_LEVEL=warning

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourfrontend.com,https://app.yourdomain.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
MAX_REQUESTS_PER_DAY=10000

# Worker processes (adjust based on CPU cores)
MAX_WORKERS=4

# ============================================================================
# Monitoring and Observability (Optional)
# ============================================================================

# Sentry for error tracking
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Application Insights / DataDog / New Relic
INSTRUMENTATION_KEY=your_monitoring_key_here

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# SSL/TLS Configuration
# ============================================================================

# SSL certificate paths (if using custom certs)
SSL_CERT_PATH=/etc/ssl/certs/finrisk.crt
SSL_KEY_PATH=/etc/ssl/private/finrisk.key

# Force HTTPS
FORCE_HTTPS=true

# ============================================================================
# Backup Configuration
# ============================================================================

# S3 bucket for backups
BACKUP_S3_BUCKET=finrisk-backups-prod
BACKUP_S3_REGION=us-east-1
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ============================================================================
# Database Connection Pooling
# ============================================================================

POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30

# ============================================================================
# Caching Configuration
# ============================================================================

CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# ============================================================================
# Security Headers
# ============================================================================

ENABLE_SECURITY_HEADERS=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# ============================================================================
# Production Checklist:
#
# [ ] All passwords changed to strong, unique values
# [ ] GEMINI_API_KEY set to production key
# [ ] DEBUG=false
# [ ] LOG_LEVEL=warning or error
# [ ] CORS_ORIGINS set to actual frontend domains
# [ ] SSL certificates configured
# [ ] Monitoring/observability enabled
# [ ] Backup schedule configured
# [ ] Database connection pool tuned
# [ ] Rate limiting configured
# [ ] Security headers enabled
# [ ] Secrets stored in secret management system
# [ ] File permissions: chmod 600 .env.production
# ============================================================================
